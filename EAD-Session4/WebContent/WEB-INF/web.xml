<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>RegisterEmployee</servlet-name>
		<servlet-class>com.metacube.Parking.controller.RegisterEmployee</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterEmployee</servlet-name>
		<url-pattern>/registerEmployee</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.metacube.Parking.controller.Login</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AddVehicle</servlet-name>
		<servlet-class>com.metacube.Parking.controller.AddVehicle</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddVehicle</servlet-name>
		<url-pattern>/login/addVehical</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LoginSuccess</servlet-name>
		<servlet-class>com.metacube.Parking.controller.LoginSuccess</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginSuccess</servlet-name>
		<url-pattern>/login/loginSuccess</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserDashboard</servlet-name>
		<servlet-class>com.metacube.Parking.controller.UserDashboard</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserDashboard</servlet-name>
		<url-pattern>/login/dashboard</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AddPlan</servlet-name>
		<servlet-class>com.metacube.Parking.controller.AddPlan</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddPlan</servlet-name>
		<url-pattern>/login/addPlan</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SavePlan</servlet-name>
		<servlet-class>com.metacube.Parking.controller.SavePlan</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SavePlan</servlet-name>
		<url-pattern>/login/savePlan</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>FriendList</servlet-name>
		<servlet-class>com.metacube.Parking.controller.FriendList</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FriendList</servlet-name>
		<url-pattern>/login/friendlist</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.metacube.Parking.controller.Logout</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/login/logout</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>SessionValidator</filter-name>
		<filter-class>com.metacube.Parking.filters.SessionValidator</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionValidator</filter-name>
		<url-pattern>/login/*</url-pattern>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>
</web-app>